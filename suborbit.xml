<?xml version="1.0"?>
<Container version="2">
    <Name>suborbit</Name>
    <Repository>ghcr.io/velinea/suborbit:latest</Repository>
    <Registry>https://github.com/velinea/suborbit</Registry>
    <Network>bridge</Network>
    <Privileged>false</Privileged>
    <Support>https://github.com/velinea/suborbit/issues</Support>
    <Project>https://github.com/velinea/suborbit</Project>
    <Overview>Movie discovery app with subtitles, Radarr & Trakt integration</Overview>
    <Category>MediaApp:Video</Category>
    <WebUI>http://[IP]:[PORT:5000]</WebUI>
    <Icon>https://raw.githubusercontent.com/velinea/suborbit/main/static/octopus_logo.png</Icon>
    <Description>SubOrbit fetches movies with subtitles in your chosen language, filters them by ratings, and optionally adds them directly to Radarr.</Description>
    <Config Name="WebUI" Target="5000" Default="5000" Mode="tcp" Description="web interface port" Type="Port" Display="always" Required="true" Mask="false"/>
    <Config Name="Config" Target="/config" Default="/mnt/user/appdata/suborbit" Mode="rw" Description=".env and log files"/>
</Container>
